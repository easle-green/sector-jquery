.menu
  $menu = selector()
  height 40px
  line-height 36px
  background-color rgba(56,63,63,0.83)
  font-size 15px

  &.columns
    padding-top 0
    padding-bottom 0

  &__list
    $list = selector()
    padding-left 4%
    padding-right 4%
    {$menu} &-item
      size calc(25% - 40px) 40px
      font-weight: 600
      text-align center
      cursor pointer
      transition background-color 0.2s ease 0s
      &:first-child
        width calc(25% - 20px)
        margin-right 35px
      &:hover:not(.active)
        background-color #302D2D
      &.active
        background-color #302D2D
        &, {$list}-link
          cursor default
        &:after
          opacity 1
          bottom 0
      &:after
        size 0 0
        opacity 0
        relative bottom 12px left 50%
        margin-left -25px
        display block
        content " "
        border-style: solid;
        border-width: 25px 24px 0 24px;
        border-color: #302D2D transparent transparent transparent;
        -webkit-transform: rotate(360deg)
        transition all .15s ease 0s
    &-link
      color #fff
      &,
      &:hover
        text-decoration none