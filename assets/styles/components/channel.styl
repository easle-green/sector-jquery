.channel

  &__container
    list-style: none
    padding: 0
    display: block

    &-element
      display inline-block
      float left
      margin-right 20px

      &:last-child
        margin-right 0

      &-link
        padding 0 20px
        background rgba(0,0,0,0.5)
        color #fff
        height 40px
        line-height 37px
        font-size: 19px
        display inline-block
        font-weight 600
        transition background-color 0.15s ease 0s
        &:hover
          background rgba(0,0,0,0.7)
        &, &:hover, &:active
          text-decoration: none
        &.inactive
          cursor default
          opacity 0.3
          &, &:hover, &:active
            background rgba(0,0,0,0.7)
