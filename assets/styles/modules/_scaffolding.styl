body
  color: white
  font: lighter 10px $basefont
  transition: background-color 1s ease-out
  &.orange
    background-color: #F2836B
  &.green
    background-color: #848139
  &.dark
    background-color: #6A758D

*
  box-sizing(border-box)

*:before, *:after
  box-sizing(border-box)

.st-content
  background: #868686 url(../images/backgrounds/background-progressive.png) no-repeat top center
  background-size 100%
  /*background-size cover*/
  /*overflow-y scroll*/

.overlay
  absolute top 0 left -200px
  size 1000px 400px
  background: url("../images/round-bg.png") no-repeat scroll -860px -20px transparent

.colname
  font-size: 15px
  color: #fff
  margin: 18px 0 8px 30px
  line-height: 15px

.row
  max-width: none
  &-nomargin
    margin 0

.columns
  margin-left -17px

.padded
  padding-left 4% !important
  padding-right 4% !important

.inline
  display inline

.container
  margin: auto
  width: 100%

.w100
  width: 100%

.p0
  padding 0

.no-decoration
  &,
  &:hover,
  &:focus
    text-decoration: none

.uppercase
  text-transform uppercase
.lowercase
  text-transform lowercase

.relative
  position relative

.round-link
  background-color $blue_dark
  color #fff
  text-decoration none
  transition background-color 0.15s ease 0s
  border-radius: 8px;
  height: 19px;
  line-height: 19px;
  padding: 2px 15px;
  font-size: 13px
    &:hover
      background-color #6690AD

box-shadow(args...)
  -webkit-box-shadow args
  -moz-box-shadow args
  box-shadow args
