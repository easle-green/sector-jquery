// 320 - 960
@media screen and (max-width: 600px)
  .logo
    &__slogan
      &-about,
      &-describe
        font-size 18px

@media screen and (max-width: 440px)
  .lang
    display: none
  .footer
    &__first,
    &__bordered
      img
        max-width 46%
    &__bordered
      img
        margin-left 0


@media screen and (max-width: 542px)
  .player
    &__round
      &-wrapper
        width: 100%
    &__bitrate
      &-wrapper
        display: none


@media screen and (max-width: 332px)
  .footer
    &__link
      margin-left: 8px


@media screen and (min-width: 320px) and (max-width: 991px)
  .header
    padding 35px 28px 0
  .lang
    text-align center
  .logo
    &__sector-img
      margin-left 0
    &__slogan
      width: 100%
      padding-left: 0
      &-about,
      &-describe
        text-align: center
        font-size 20px
    .btn-channels
      margin 10px auto 0
      width: 220px
      font-size 17px
      text-align center
      display block
  .container
    .player
      &__volume,
      &__bitrate .colname
        display none
      &__bitrate-container
        margin-top 75px
    .equalizer
      display none
    .tabs, .tabs > .columns
      margin-left: 0
      height auto
    .formats
      &__block
        padding-left 0
        padding-right 0
      blockquote
        margin 0 0 -10px
    .menu
      display none
    .formats.columns
      padding-left 28px
      padding-right 28px

  .formats
    blockquote
      font-size 14px
    &-descr
      font 14px/17px Arial

  .st-container .st-content
    background-size: cover
  .footer
    .columns
      margin-left: 0
    .padded
      padding-left: 0 !important
      padding-right: 0 !important
    &__first
      height auto
      margin-bottom 15px
    &__cell
      margin-bottom 35px
      padding: 0 43px
      &:first-child
        padding-left 43px
        padding-right 43px
      &:last-child
        padding: 0 43px
    &__xiph,
    &__creative
      img
        max-width 100%
    .text-right
      text-align left


// 960 - 1280
@media screen and (min-width: 992px) and (max-width: 1152px)
  .logo__slogan
    padding-left 55px
  .logo__sector-img
    margin-left 27px
  .container .player
    &__volume
      display: none
      &-container
        font-size 37px
        margin-left -26px
      .colname
        margin-left 5px
        text-align: left;
    .player__block
      width: 100%
  .columns
    &.formats
      blockquote
        font-size 13px
      h6
        font-size 18px
    .formats-descr
      font 12px/16px Arial
    &.programs
      font-size 12px
  .footer__cell
    padding 0 10px
  .channel-main
    .st-container
      .st-content
        background-size initial


@media screen and (min-width: 1153px) and (max-width: 1280px)
  .logo__slogan
    &-about,
    &-describe
      font-size 32px
  .player
    &__bitrate
      padding-left: 0
      &-name
        white-space nowrap

@media screen and (min-width: 1153px) and (max-width: 1224px)
  .formats-descr
    font 14px/17px Arial

@media screen and (min-width: 1500px)
  .channel-main
    .st-container
      .st-content
        background-size cover

// 1680 - 1900
@media screen and (min-width: 1681px)
  .container
    .header,
    .player,
    .menu__list,
    .tabs > .columns > .row,
    .footer .columns > .row
      width 1400px
      margin: auto
      float: none
    .tabs > .columns > .row
      padding-left 40px
      padding-right 50px
    .tabs > .formats.columns > .row
      padding-left 60px
      padding-right 45px
    .footer .columns > .row
      padding-left 63px
      padding-right 40px
    .logo
      &__sector-img
        margin-left 98px
      &__slogan
        width: 75%
        padding-left 95px
        &-about,
        &-describe
          font-size: 34px
    .player
      &__block
        margin-left: 0
        margin-right: 0
      &__volume
        padding 0 0 0 25px
        .colname
          margin-left: -5px
    .footer__cell
      &:first-child
        padding-left 0
      &:last-child
        padding-right 0
