// 960 - 1280
@media screen and (min-width: 992px) and (max-width: 1152px)
  .logo__slogan
    padding-left 55px
    &-about,
    &-describe
      font-size 23px

  .logo__sector-img
    margin-left 23%

  .container .player
    &__volume
      display: none
      &-container
        font-size 37px
        margin-left -26px
      .colname
        margin-left 5px
        text-align: left;
    .player__block
      width: 100%

  .columns
    &.formats
      blockquote
        font-size 13px
      h6
        font-size 18px
    .formats-descr
      font 12px/16px Arial
    &.programs
      font-size 12px

  .footer__cell
    padding 0 10px

  .st-container .st-content
    background-size initial

  .player__bitrate
    &-container
      font-size 36px
    &-element
      line-height 1


@media screen and (min-width: 1153px) and (max-width: 1199px)
  .logo__sector-img
    margin-left -37px
